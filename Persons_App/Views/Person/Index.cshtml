@model IEnumerable<Person>
@{
    ViewData["Title"] = "Person Page";
}

<div>
    <h2>Welcome</h2>
</div>


<table class="table">
    <thead class="table-light">

        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Gender</th>
            <th scope="col">BirthDate</th>
            <th scope="col">City</th>
            <th scope="col">PhoneNumber</th>
            <th scope="col">PhoneNumberType</th>
            <th scope="col">PmNumber</th>
            <th scope="col">Image</th>
        </tr>

    </thead>
    <tbody>
           @foreach (var p in Model)
           {
               var PhotoPath = "~/Images/" + (p.Image);
            <tr>
                <td scope="col">@p.Id</td>
                <td scope="col">@p.FirstName</td>
                <td scope="col">@p.LastName</td>
                <td scope="col">@p.Gender</td>
                <td scope="col">@p.BirthDate</td>
                <td scope="col">@p.City</td>
                <td scope="col">@p.PhoneNumber</td>
                <td scope="col">@p.PhoneNumberType</td>
                <td scope="col">@p.PmNumber</td>
                <td scope="col"><img class="card-img-top" src="@PhotoPath" asp-append-version="true" /></td>
                <td class="col-sm-6">
                    <a asp-controller="person" asp-action="edit" asp-route-id="@p.Id"> Edit </a> |
                    <a asp-controller="person" asp-action="detail" asp-route-id="@p.Id"> Details </a>|
                    <a asp-controller="person" asp-action="delete" asp-route-id="@p.Id"> Delete </a> 
                </td>
            </tr>
            }
    </tbody>
</table>



